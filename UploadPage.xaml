<UserControl x:Class="WpfApp2.UploadPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Select File" Width="150" Height="40" Click="SelectFileButton_Click" Margin="0,10"/>
            <!-- TextBox로 변경 -->
            <TextBox x:Name="SelectedFilePath" Text="There is no selected file" IsReadOnly="True" TextAlignment="Center" Margin="0,10" Width="300" />
            <Image x:Name="ImagePlot" Width="300" Height="200" Margin="0,10"/>
        </StackPanel>
    </Grid>
</UserControl>
