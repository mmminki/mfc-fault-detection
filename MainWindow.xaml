<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OES data-based MFC fault detection program" Height="450" Width="800">
    
    
    <Grid>
        <Button Content="⚙️" Width="40" Height="40"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                Click="SettingsButton_Click"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
            <Button Content="Data upload" Click="UploadButton_Click" Margin="10"/>
            <Button Content="Data history management" Click="HistoryButton_Click" Margin="10"/>
        </StackPanel>

        <!-- 여기 중요한 부분 -->
        <Frame x:Name="MainFrame" Margin="0,80,0,0"/>
    </Grid>
</Window>
